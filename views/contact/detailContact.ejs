<a href="/contact" class="btn btn-primary btn-sm mt-3">Back Contact</a>

<% if (!detail) { %>
<div class="alert alert-warning mt-3" role="alert">
    Data tidak tersedia
</div>
<% }else{ %>
<h2 class="mt-3">Detail Contact <%= detail.name %></h2>
<table class="table">
    <tr>
        <th>Nama</th>
        <td><%= detail.name %></td>
    </tr>
    <tr>
        <th>Nomor Handphone</th>
        <td><%= detail.mobile %></td>
    </tr>
    <tr>
        <th>Email</th>
        <td>
            <!-- Jika email tidak tersedia -->
            <% if (!detail.email) { %>
            Email belum diatur
            <% } %>
            <!-- akhir kondisi email -->
            <!-- menampilkan email -->
            <%= detail.email %>
        </td>
    </tr>
</table>
<% } %>